<article>
  {{#if title}}
  <header>
    <h2>{{title}}</h2>

    {{#if author}}
    <p>
      {{#if author_link}}
      <small>// Written by <a href="{{author_link}}">{{author}}</a></small>
      {{else}}
      <small>// Written by {{author}}</small>
      {{/if}}
    </p>
    {{/if}}

    {{#if published}}
    <p><small>// {{published}}</small></p>
    {{/if}}
  </header>
  {{/if}}

  {{{body}}}

  {{#if footnote}}
  <footer><small>
      {{footnote}}
    </small></footer>
  {{/if}}
</article>